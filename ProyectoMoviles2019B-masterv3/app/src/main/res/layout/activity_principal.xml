<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Principal" android:background="@drawable/logotipo2">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textColor="@android:color/background_light" android:textSize="36sp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:text="@string/textViewOpcionRealizar" android:textColorHint="@android:color/background_light"
            android:textColorHighlight="@android:color/background_light"
            android:textColorLink="@android:color/background_light"/>
    <Button
            android:text="@string/button_crearre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="116dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" android:textColor="@android:color/background_light"
            android:background="@android:color/holo_red_light" android:onClick="onclickCrearReceta"
            android:textSize="30sp"/>
    <Button
            android:text="@string/button_consultarTodosmenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            app:layout_constraintTop_toBottomOf="@+id/button3" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintHorizontal_bias="0.0"
            android:textColor="@android:color/background_light" android:background="@color/colorAccent"
            android:layout_marginTop="152dp" android:onClick="onclickConsultarReceta" android:textSize="30sp"/>
    <Button
            android:text="@string/button_perfil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button8" android:layout_marginTop="184dp"
            app:layout_constraintTop_toBottomOf="@+id/button4" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintHorizontal_bias="1.0"
            android:textColor="@android:color/background_light" android:background="@color/colorAccent"
            android:onClick="onclickVerPerfil"
            android:textSize="30sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>