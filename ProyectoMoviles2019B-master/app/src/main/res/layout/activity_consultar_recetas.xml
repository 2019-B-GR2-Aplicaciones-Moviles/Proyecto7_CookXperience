<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ConsultarRecetas" android:background="@drawable/receta8">
    <TextView
            android:text="@string/textRecetas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView11"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:textColor="@android:color/background_dark"
            android:textSize="36sp"/>
    <Button
            android:text="@string/buttonBuscarReceta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnBuscar" android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/txtIngreseReceta" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView11" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:textColor="@android:color/background_light"
            android:background="@color/colorAccent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:inputType="textPersonName"
            android:text="@string/textIngreseReceta"
            android:ems="10"
            android:id="@+id/txtIngreseReceta" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView11" app:layout_constraintEnd_toStartOf="@+id/btnBuscar"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:background="@android:color/background_light"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/receta15"
            android:id="@+id/receta"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:onClick="onClickverReceta" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView23" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.11"/>
    <TextView
            android:text="Dar click en la imagen de la receta que desea visualizar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView23"
            app:layout_constraintTop_toBottomOf="@+id/btnBuscar" android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>